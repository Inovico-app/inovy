{
  "name": "inovy",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F web db:push",
    "db:studio": "turbo -F web db:studio",
    "db:generate": "turbo -F web db:generate",
    "db:migrate": "turbo -F web db:migrate",
    "security:verify": "bash scripts/verify-dependencies.sh",
    "security:audit": "pnpm audit --audit-level=moderate"
  },
  "devDependencies": {
    "turbo": "^2.6.1"
  }
}

# =============================================================================
# Inovy Environment Configuration Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Neon or local)
DATABASE_URL=postgresql://username:password@localhost:5432/inovy

# -----------------------------------------------------------------------------
# Redis Cache (Upstash)
# -----------------------------------------------------------------------------
# Get credentials from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# -----------------------------------------------------------------------------
# Authentication (Better Auth)
# -----------------------------------------------------------------------------
# Generate secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-better-auth-secret-minimum-32-characters
BETTER_AUTH_URL=http://localhost:3000

# OAuth Encryption Key for Google/Microsoft workspace integrations
# Generate: openssl rand -hex 32
OAUTH_ENCRYPTION_KEY=your-64-character-hex-encryption-key-for-oauth-tokens

# -----------------------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------------------

# Google OAuth & Workspace Integration
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback

# Microsoft OAuth & 365 Integration
# Get credentials from: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# -----------------------------------------------------------------------------
# Federative Authentication (SSD-5.3.01 Compliance)
# -----------------------------------------------------------------------------
# Status: Not yet required - implement when patient portal is added
# Documentation: docs/compliance/federative-authentication-compliance.md
# Legal requirement: Dutch Digital Government Act (Wdo) and eIDAS Regulation
# -----------------------------------------------------------------------------

# DigiD Configuration (for citizen/patient authentication)
DIGID_ENABLED=false
# DIGID_ENTITY_ID=https://yourdomain.nl/saml/metadata
# DIGID_CALLBACK_URL=https://yourdomain.nl/api/auth/saml/digid/callback
# DIGID_LOGOUT_URL=https://yourdomain.nl/api/auth/saml/digid/logout

# Signicat Broker Integration (recommended for DigiD)
# Get credentials from: https://developer.signicat.com/
# DIGID_ISSUER=https://preprod.signicat.com/saml/digid
# DIGID_ENTRY_POINT=https://preprod.signicat.com/saml/digid/sso
# DIGID_LOGOUT_ENDPOINT=https://preprod.signicat.com/saml/digid/slo
# DIGID_IDP_CERT=<Signicat public certificate>

# Service Provider Keys (PKIoverheid certificates required for production)
# DIGID_SP_PRIVATE_KEY=<Private key for signing SAML requests>
# DIGID_SP_CERT=<Public certificate for SAML>

# BSN Encryption (Dutch citizen service number - special category personal data)
# Generate: openssl rand -hex 32
# BSN_ENCRYPTION_KEY=<64 character hex key for BSN encryption>

# eHerkenning Configuration (for business/professional authentication)
EHERKENNING_ENABLED=false
# EHERKENNING_ENTITY_ID=https://yourdomain.nl/saml/metadata/eherkenning
# EHERKENNING_CALLBACK_URL=https://yourdomain.nl/api/auth/saml/eherkenning/callback
# EHERKENNING_ISSUER=https://preprod.signicat.com/saml/eherkenning
# EHERKENNING_ENTRY_POINT=https://preprod.signicat.com/saml/eherkenning/sso
# EHERKENNING_IDP_CERT=<Certificate>
# EHERKENNING_SP_PRIVATE_KEY=<Private key>
# EHERKENNING_SP_CERT=<Public certificate>
# EHERKENNING_REQUIRED_LEVEL=EH3

# SAML Security Settings
# SAML_VALIDATE_SIGNATURE=true
# SAML_SESSION_TIMEOUT=3600

# Signicat API (if using broker)
# SIGNICAT_API_KEY=<API key from Signicat dashboard>
# SIGNICAT_ENVIRONMENT=preprod

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------

# OpenAI
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# Deepgram (Transcription)
# Get API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key
NEXT_PUBLIC_DEEPGRAM_API_KEY=your-deepgram-api-key

# Hugging Face (for reranking)
# Get API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key

# -----------------------------------------------------------------------------
# Vector Database (Qdrant)
# -----------------------------------------------------------------------------
# Cloud hosting (recommended): https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# Local development (optional)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# -----------------------------------------------------------------------------
# File Storage (Vercel Blob)
# -----------------------------------------------------------------------------
# Get token from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_REPLY_TO_EMAIL=support@yourdomain.com

# -----------------------------------------------------------------------------
# Payment Processing (Stripe)
# -----------------------------------------------------------------------------
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# -----------------------------------------------------------------------------
# Meeting Bot Integration (Recall.ai)
# -----------------------------------------------------------------------------
# Get credentials from: https://recall.ai/dashboard
RECALL_API_KEY=your-recall-api-key
RECALL_WEBHOOK_SECRET=your-recall-webhook-secret
WEBHOOK_BASE_URL=http://localhost:3000
NEXT_PUBLIC_WEBHOOK_URL=http://localhost:3000/api/webhooks

# -----------------------------------------------------------------------------
# Security & Encryption
# -----------------------------------------------------------------------------

# Encryption at Rest (optional, for sensitive recordings)
ENABLE_ENCRYPTION_AT_REST=false
# ENCRYPTION_MASTER_KEY=<256-bit encryption key>

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Cron Job Security
CRON_SECRET=your-cron-secret

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
RATE_LIMIT_FREE_MAX_REQUESTS=100
RATE_LIMIT_FREE_MAX_COST=10000
RATE_LIMIT_PRO_MAX_REQUESTS=1000
RATE_LIMIT_PRO_MAX_COST=100000

# -----------------------------------------------------------------------------
# MCP (Model Context Protocol) - Optional
# -----------------------------------------------------------------------------
# MCP_REMOTE_URL=http://localhost:3000/api/mcp

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_DEBUG=false
# LOG_LEVEL=info

# =============================================================================
# End of Configuration
# =============================================================================

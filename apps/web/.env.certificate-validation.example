# Certificate Validation Configuration
# Copy these to your .env.local file and adjust as needed

# Enable/disable certificate validation (default: true in production, true in development)
CERT_VALIDATION_ENABLED=true

# Enable CRL (Certificate Revocation List) checking (default: true)
CERT_CRL_CHECK_ENABLED=true

# Enable OCSP (Online Certificate Status Protocol) checking (default: true)
CERT_OCSP_CHECK_ENABLED=true

# Timeout for revocation checks in milliseconds (default: 5000)
CERT_REVOCATION_TIMEOUT=5000

# Strict mode - reject connections on check failure (default: false)
# false: Only reject if certificate is confirmed revoked
# true: Also reject if revocation check fails (network error, timeout, etc.)
CERT_STRICT_MODE=false

# Cache timeout for CRL data in milliseconds (default: 3600000 = 1 hour)
CERT_CACHE_TIMEOUT=3600000

# Log validation failures (default: true)
CERT_LOG_FAILURES=true

# Allow self-signed certificates in development (default: false)
# WARNING: Only use in development, never in production
CERT_ALLOW_SELF_SIGNED=false
